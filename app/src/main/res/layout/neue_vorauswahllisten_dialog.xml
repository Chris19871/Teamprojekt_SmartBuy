<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/add_auswahlliste">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewAddVorauswahlliste"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addVorauswahllisteTextView"
            android:layout_gravity="center_horizontal"
            style="@style/vorauswahllisteText"
            android:gravity="center_horizontal"
            android:hint="Name"
            android:maxLines="2" />
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/scrollViewdescnewProduct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/addVorauswahllisteCancel"
            style="@style/addVorauswahllisteButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/newProductSave"
            android:layout_toStartOf="@+id/newProductSave"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/addVorauswahllisteSave"
            style="@style/addVorauswahllisteButtonAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/newProductLogo"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/newProductLogo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</LinearLayout>