<resources>

    <!-- Startbildschrim Schriftzug. -->
    <style name="startscreen" parent="android:Widget.TextView">
        <item name="android:background">@color/startScreen</item>
        <item name="android:textColor">@color/actionBar</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text"><u>SmartBuy</u></item>
    </style>

    <!-- ÜberView Style -->
    <style name="uberTextView" parent="android:Widget.TextView">
        <item name="android:background">@color/startScreen</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- newProducts Style -->
    <style name="newProduct" parent="android:Widget.TextView">
        <item name="android:background">@color/startScreen</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="newProductBeschreibung" parent="android:Widget.TextView">
        <item name="android:background">@color/startScreen</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="newProductButton" parent="android:Widget.Button">
        <item name="android:background">@color/newProductButton</item>
        <item name="android:textColor">@color/newProductButtonText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- löschen_rück Style -->
    <style name="loeschenRueckButton" parent="android:Widget.Button">
        <item name="android:background">@color/loeschenRueckButton</item>
        <item name="android:textColor">@color/loeschenRueckButtonText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- add_auswahlliste Style -->
    <style name="add_auswahlliste">
        <item name="android:background">@color/startScreen</item>
    </style>
    <style name="add_auswahllisteText" parent="android:Widget.TextView">
        <item name="android:background">@color/startScreen</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="add_auswahllisteButton" parent="android:Widget.Button">
        <item name="android:background">@color/addAuswahllistenButton</item>
        <item name="android:textColor">@color/addAuswahllistenButtonText</item>
        <item name="android:textStyle">bold</item>
    </style>




    <style name="list" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@color/actionBar</item>
        <item name="android:text"></item>
    </style>


</resources>
